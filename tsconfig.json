{
  "compilerOptions":{
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "esModuleInterop": true,
    "lib":[
      "es6"
    ],
    "sourceMap": true,
    "rootDir": ".",

    // "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "plugins": [
        { "name": "typescript-tslint-plugin" }
    ]
  },
  "typeRoots": [
    "./src/@types/**/index.d.ts",
    "./node_modules/@types"
  ],
  "types": [
    "node",
    "mocha"
  ],
  "exclude":[
    "node_modules",
    ".vscode-test",
    "test/example",
    "!node_modules/@types",
    "./src/types"
  ]
}